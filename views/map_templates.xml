<odoo>
    <template id="MapTemplate" name="Map Template">
        <div class="wine-map-wrapper">
            <div class="wine-map-header">
                <h2 class="map-title">Seleccione una región</h2>
                <h4 class="map-subtitle text-muted"></h4>
            </div>
            <div class="wine-map-container" style="height: 70vh; width: 100%;"></div>
        </div>
    </template>

    <template id="public_map_template" name="Public Map" inherit_id="website.layout">
        <xpath expr="//div[@id='wrap']" position="inside">
            <div class="container mt-4">
                <div class="row">
                    <div class="col-md-12">
                        <h1 t-field="map.name"/>
                        <div class="wine-map-wrapper">
                            <div class="wine-map-header">
                                <h2 class="map-title">Seleccione una región</h2>
                                <h4 class="map-subtitle text-muted"></h4>
                            </div>
                            <div id="public_wine_map" style="height: 70vh; width: 100%;"></div>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>