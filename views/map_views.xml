<odoo>
    <!-- Vista del mapa -->
    <record id="view_wine_region_map_form" model="ir.ui.view">
        <field name="name">wine.region.map.form</field>
        <field name="model">wine.region.map</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="open_map_view" type="object" string="Ver Mapa Interactivo" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="default_lat"/>
                        <field name="default_lng"/>
                        <field name="default_zoom"/>
                    </group>
                    <notebook>
                        <page string="Regiones">
                            <field name="region_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="country_id"/>
                                    <field name="color" widget="color"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="sequence"/>
                                        <field name="name"/>
                                        <field name="country_id"/>
                                        <field name="color" widget="color"/>
                                        <field name="image" widget="image" class="oe_avatar"/>
                                        <field name="geo_data" widget="textarea" placeholder='Pegar GeoJSON aquí'/>
                                    </group>
                                    <group>
                                        <field name="description" widget="html"/>
                                    </group>
                                    <notebook>
                                        <page string="Detalles Técnicos">
                                            <field name="climate" widget="textarea"/>
                                            <field name="soil" widget="textarea"/>
                                            <field name="grapes" widget="textarea"/>
                                        </page>
                                        <page string="Productores">
                                            <field name="producers_ids" widget="many2many_tags"/>
                                        </page>
                                        <page string="Vinos">
                                            <field name="wine_ids"/>
                                        </page>
                                    </notebook>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción y menú -->
    <record id="action_wine_region_map" model="ir.actions.act_window">
        <field name="name">Mapa de Regiones Vitivinícolas</field>
        <field name="res_model">wine.region.map</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_wine_root" name="Vinos" sequence="10"/>
    <menuitem id="menu_wine_maps" name="Mapas de Regiones" parent="menu_wine_root" action="action_wine_region_map"/>
</odoo>